[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space

[{composer.lock, .babelrc, .stylelintrc, .eslintrc, jest.config, *.json, *.jsb3, *.jsb2, *.bowerrc}]
indent_size = 2

[{*.applejs, *.js}]
indent_size = 2

[{*.es6, *.mjs}]
indent_size = 2

[*.js.flow]
indent_size = 2

[*.js.map]
indent_size = 2

[{*.scss, *.css}]
indent_size = 2

[{*.yml, *.yaml}]
indent_size = 2
